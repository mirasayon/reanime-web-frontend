{
    "name": "reanime-web-frontend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:webpack": "dotenv -e .env.development -- next dev --webpack --port 3641 --hostname 192.168.0.105",
        "dev": "node ./scripts/remove-build.ts && dotenv -e .env.development -- next dev --port 3641 --hostname 192.168.0.105",
        "build:prod": "node ./scripts/remove-build.ts && node --env-file=.env.production ./src/scripts/check-env.ts && dotenv -e .env.production -- next build",
        "build:test": "node ./scripts/remove-build.ts && node --env-file=.env.test ./src/scripts/check-env.ts && dotenv -e .env.test -- next build",
        "start:test": "dotenv -e .env.test -- next start --port 2641 --hostname 192.168.0.105",
        "start:dev": "dotenv -e .env.development -- next start --port 3641 --hostname 192.168.0.105",
        "format": "prettier --ignore-unknown --write .",
        "format:dev": "onchange \"./src\" -- prettier ./src --write --ignore-unknown {{changed}}",
        "type:watch": "tsc --watch --noEmit --project ./tsconfig.json",
        "type:check": "tsc --noEmit --project ./tsconfig.json",
        "start:production": "dotenv -e .env.production -- next start --port 4641 --hostname 192.168.0.105"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "@next/third-parties": "^16.1.5",
        "better-psl": "^1.0.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cookies-next": "^6.1.1",
        "date-fns": "^4.1.0",
        "dotenv-cli": "^11.0.0",
        "embla-carousel-autoplay": "^8.6.0",
        "embla-carousel-react": "^8.6.0",
        "jotai": "^2.16.2",
        "kodik": "^0.0.2",
        "log-it-colored": "^0.0.3",
        "lucide-react": "^0.563.0",
        "next": "^16.1.5",
        "next-themes": "^0.4.6",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-hook-form": "^7.71.1",
        "react-icons": "^5.5.0",
        "safest-env": "^0.0.1",
        "shikimoript": "^0.1.2",
        "tailwind-merge": "^3.4.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@types/node": "^25.0.10",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "onchange": "^7.1.0",
        "prettier": "^3.8.1",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3"
    },
    "license": "MIT",
    "author": {
        "email": "mirasayon@ya.ru",
        "name": "Miralisher",
        "url": "https://mirasayon.com"
    },
    "description": "Frontend for reanime.art",
    "engines": {
        "node": ">=22"
    }
}

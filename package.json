{
    "name": "reanime.art-web-frontend",
    "version": "1.4.0",
    "private": true,
    "author": {
        "name": "MiraSayon",
        "url": "https://mirasayon.com"
    },
    "description": "Reanime.art Web Fronytend Project. By Next.js",
    "type": "module",
    "scripts": {
        "dev": "dotenv -e .env.development -- next dev --turbopack --port 3301",
        "build": "dotenv -e .env.production -- next build",
        "build-prod": "dotenv -e .env.production -- next build --no-lint",
        "start-test": "dotenv -e .env.test -- next start --port 3301",
        "standalone": "dotenv -e .env.production -- node ./.next/standalone/server.js",
        "tsi": "tsc --watch --noEmit --project ./tsconfig.json",
        "start-prod": "dotenv -e .env.production -- next start -p 4839 --hostname 192.168.0.105"
    },
    "dependencies": {
        "@next/third-parties": "^15.3.4",
        "cookies-next": "^6.0.0",
        "dotenv-cli": "^8.0.0",
        "jotai": "^2.12.5",
        "next": "^15.3.4",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.10",
        "@types/node": "^24.0.4",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "postcss-load-config": "^6.0.1",
        "tailwindcss": "^4.1.10",
        "typescript": "^5.8.3"
    }
}

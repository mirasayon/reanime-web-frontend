{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "tsBuildInfoFile": "./.next/.tsbuild.tsbuildinfo",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "#app/*": ["./src/app/*"],
            "#T/*": ["./src/types/*"],
            "&us/*": ["./src/shared/shared-user-service/*"],
            "#/*": ["./src/*"]
        }
    },
    "include": ["./next-env.d.ts", "./src", ".next\\dev/types/**/*.ts"],
    "exclude": ["node_modules", "./src/scripts"]
}


{
    "compilerOptions": {
        "noImplicitAny": true,
        "strict": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "removeComments": true,
        "checkJs": false,
        "skipLibCheck": true,
        "tsBuildInfoFile": "./logs/build.tsbuildinfo",
        "noEmit": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": false,
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "verbatimModuleSyntax": true,
        "incremental": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "paths": {
            "#app/*": ["./src/app/*"],
            "#T/*": ["./src/types/*"],
            "#/*": ["./src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "./src", ".next/types/**/*.ts"],
    "exclude": ["./src/tests", "./drafts"]
}


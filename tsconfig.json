{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo.json",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "#T/*": ["./src/types/*"],
            "#/*": ["./src/*"],
            "#user-service/*": ["./src/user-service-shared-package/*"]
        }
    },
    "include": [
        "./next-env.d.ts",
        "./src",
        ".next\\dev/types/**/*.ts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules", "./src/scripts"]
}
